{
    "compilerOptions": {
      "module": "CommonJS",
      "lib": ["esnext"],
      "target": "es5",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "declaration": true,
      "resolveJsonModule": true,
      "outDir": "dist"
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}