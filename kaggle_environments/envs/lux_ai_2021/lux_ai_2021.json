{
  "name": "lux_ai_2021",
  "title": "Lux AI Challenge: 2021",
  "description": "A Novel AI Programming Challenge about Lux",
  "version": "1.0.0",
  "agents": [2],
  "configuration": {
    "episodeSteps": {
      "description": "Maximum number of steps the environment can run. Total is this number -1. One complete game is 201 steps",
      "type": "integer",
      "minimum": 2,
      "default": 202
    },
    "parameters": {
      "description": "Parameters for Lux AI 2021",
      "type": "object"
    },
    "mapType": {
      "description": "Map type to use",
      "type": "string",
      "default": "debug"
    },
    "seed": {
      "description": "Seed to use for episodes",
      "type": "integer"
    },
    "actTimeout": 1
  },
  "reward": {
    "description": "number of cities you own on the board",
    "type": "integer",
    "default": 0
  },
  "observation": {
    "remainingOverageTime": 60,
    "reward": {
      "description": "Current reward of the agent.",
      "type": "integer",
      "minimum": -9999,
      "maximum": 9999,
      "default": 0
    },
    "updates": {
      "description": "List of update strings for agents to use and generate the observed state",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "player": {
      "description": "Current player's index / team id",
      "type": "integer",
      "defaults": [0, 1]
    }
  },
  "action": {
    "description": "Actions",
    "type": "array",
    "items": {
      "type": "string"
    }
  }
}
