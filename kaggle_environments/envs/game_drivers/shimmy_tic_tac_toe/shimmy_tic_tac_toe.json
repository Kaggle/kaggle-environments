{
    "name": "shimmy_tic_tac_toe",
    "title": "Shimmy Tic-Tac-Toe",
    "description": "Tic-Tac-Toe via OpenSpiel through Shimmy remote game driver",
    "version": "1.0.0",
    "agents": [
        2
    ],
    "configuration": {
        "episodeSteps": 100,
        "actTimeout": 60,
        "runTimeout": 1200
    },
    "reward": {
        "description": "Game reward from OpenSpiel (varies by game)",
        "type": [
            "number",
            "null"
        ],
        "default": 0
    },
    "observation": {
        "board": {
            "description": "Flattened 3x3 board state",
            "type": "array",
            "shared": true,
            "items": {
                "type": "integer"
            },
            "default": [
                0,
                0,
                0,
                0,
                0,
                0,
                0,
                0,
                0
            ]
        },
        "legalActions": {
            "description": "List of legal action indices (0-8)",
            "type": "array",
            "shared": true,
            "items": {
                "type": "integer"
            },
            "default": [
                0,
                1,
                2,
                3,
                4,
                5,
                6,
                7,
                8
            ]
        },
        "mark": {
            "defaults": [
                0,
                1
            ],
            "description": "Which player the agent is (0 or 1)",
            "enum": [
                0,
                1
            ]
        },
        "remainingOverageTime": 60
    },
    "action": {
        "description": "Position to place mark (0-8)",
        "type": "integer",
        "minimum": 0,
        "maximum": 8,
        "default": 0
    },
    "status": {
        "defaults": [
            "ACTIVE",
            "INACTIVE"
        ]
    }
}