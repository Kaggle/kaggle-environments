{
    "name": "shimmy_game",
    "title": "Shimmy Game",
    "description": "Game environment via OpenSpiel through Shimmy remote game driver",
    "version": "1.0.0",
    "agents": [
        2
    ],
    "configuration": {
        "episodeSteps": {
            "description": "Maximum number of steps the environment can run",
            "type": "integer",
            "minimum": 1,
            "default": 100
        },
        "actTimeout": {
            "description": "Seconds allowed per agent action",
            "type": "number",
            "minimum": 1,
            "default": 60
        },
        "runTimeout": {
            "description": "Total seconds allowed for the episode",
            "type": "number",
            "minimum": 1,
            "default": 1200
        }
    },
    "reward": {
        "description": "Game reward from OpenSpiel (varies by game)",
        "type": [
            "number",
            "null"
        ],
        "default": 0
    },
    "observation": {
        "remainingOverageTime": {
            "description": "Remaining overage time in seconds",
            "type": "number",
            "default": 60
        }
    },
    "action": {
        "description": "Action index (game-specific)",
        "type": "integer",
        "minimum": 0
    },
    "status": {
        "defaults": [
            "ACTIVE",
            "INACTIVE"
        ]
    }
}